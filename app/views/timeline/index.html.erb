<% content_for :title, "タイムライン" %>

<div class="sticky top-0 z-30 bg-white/80 backdrop-blur-md border-b border-gray-100">
  <div class="flex items-center h-14 px-4">
    <h1 class="text-xl font-bold text-gray-900">タイムライン</h1>
  </div>
</div>

<%= render "posts/form" %>

<div id="posts" class="max-w-2xl mx-auto w-full border-x border-gray-100 min-h-screen bg-white">
  <div class="flex flex-col">
    <% @posts.each do |post| %>
      <div class="p-4 border-b border-gray-100 flex gap-3 hover:bg-gray-50/50 transition duration-200">
        
        <div class="flex-shrink-0">
          <div class="h-12 w-12 rounded-full overflow-hidden bg-sky-50 flex items-center justify-center border border-gray-100 shadow-sm">
            <% if post.user&.avatar&.attached? %>
              <%= image_tag post.user.avatar, class: "h-full w-full object-cover" %>
            <% else %>
              <div class="h-full w-full flex items-center justify-center bg-gray-100 text-gray-400">
                <% if post.user %>
                  <span class="text-sky-600 font-bold text-lg">
                    <%= (post.user.name.presence || post.user.unique_name)[0].upcase %>
                  </span>
                <% else %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-1 mb-0.5 overflow-hidden text-ellipsis whitespace-nowrap">
            <% if post.user %>
              <span class="font-bold text-gray-900 truncate">
                <%= post.user.name.presence || "ユーザー名未設定" %>
              </span>
              <span class="text-gray-500 text-sm truncate">
                @<%= post.user.unique_name %>
              </span>
            <% else %>
              <span class="font-bold text-gray-400">退会済みユーザー</span>
            <% end %>
            <span class="text-gray-400 text-sm flex-shrink-0">
              · <%= time_ago_in_words(post.created_at) %>前
            </span>
          </div>

          <h2 class="text-lg font-extrabold text-gray-900 mb-1 leading-tight hover:text-sky-600 transition">
            <%= link_to post.title, post %>
          </h2>

          <p class="text-[15px] text-gray-800 leading-normal mb-3 whitespace-pre-wrap break-words">
            <%= post.body %>
          </p>

          <%= link_to "/search/show/#{post.library&.api_str}", class: "block group" do %>
            <div class="border border-gray-200 rounded-2xl overflow-hidden flex h-32 bg-white group-hover:border-sky-200 group-hover:bg-sky-50/30 transition duration-200 shadow-sm"
                data-controller="book-loader" 
                data-book-loader-api-key-value="<%= post.library&.api_str %>">
              
              <div data-book-loader-target="thumbnail" 
                  class="w-24 flex-shrink-0 bg-gray-50 border-r border-gray-100 overflow-hidden flex items-center justify-center">
                <div class="animate-pulse flex space-x-4">
                  <div class="bg-gray-200 h-16 w-12 rounded"></div>
                </div>
              </div>

              <div class="p-3 flex flex-col justify-center flex-1 min-w-0">
                <div data-book-loader-target="title" class="text-sky-600 text-[13px] font-bold truncate"></div>
                <div data-book-loader-target="authors" class="text-gray-900 text-sm font-bold truncate mt-1"></div>
                <div data-book-loader-target="description" class="text-gray-500 text-xs line-clamp-2 mt-1 leading-tight"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>