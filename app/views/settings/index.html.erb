<% content_for :title, "アカウント設定" %>

<div class="max-w-2xl mx-auto pb-20">
  <div class="flex items-center h-16 px-6 bg-white/80 backdrop-blur-md sticky top-0 z-10 border-b border-gray-100 mb-6">
    <h1 class="text-xl font-bold text-gray-900">アカウント設定</h1>
  </div>

  <div class="px-4 space-y-6">
    <% if notice %>
      <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-xl text-sm shadow-sm">
        <%= notice %>
      </div>
    <% end %>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
      <div class="p-6">
        <div class="flex items-center space-x-4 mb-6">
          <div class="h-16 w-16 rounded-full overflow-hidden bg-green-100 flex items-center justify-center">
            <% if current_user.avatar.attached? %>
              <%# 画像がある場合は画像を表示 %>
              <%= image_tag current_user.avatar, class: "h-full w-full object-cover" %>
            <% else %>
              <%# 画像がない場合は名前の1文字目を表示 %>
              <span class="text-green-600 font-bold text-2xl">
                <%= (current_user.name.presence || current_user.unique_name)[0].upcase %>
              </span>
            <% end %>
          </div>
          <div>
            <h2 class="text-lg font-bold text-gray-900"><%= current_user.name.presence || "名前未設定" %></h2>
            <p class="text-sm text-gray-500">@<%= current_user.unique_name %></p>
          </div>
        </div>

        <div class="grid grid-cols-1 gap-4 py-4 border-t border-gray-50">
          <div class="flex flex-col">
            <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">メールアドレス</span>
            <span class="text-gray-700 font-medium"><%= current_user.email %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
      <h3 class="text-md font-bold text-gray-900 mb-6">プロフィールの編集</h3>
      <%= render "form" %>
    </div>
  </div>
</div>