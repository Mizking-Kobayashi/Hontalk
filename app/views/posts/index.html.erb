<% content_for :title, "Posts" %>

<div class="flex items-center h-14 px-4 bg-white/80 backdrop-blur-sm sticky top-0 z-10 border-b border-gray-100">
  <h1 class="ml-4 text-xl font-bold text-gray-900">投稿一覧</h1>
</div>

<% if notice %>
  <div class="fixed top-4 left-1/2 -translate-x-1/2 z-50 bg-green-600 text-white px-6 py-2 rounded-full shadow-lg text-sm font-bold animate-bounce">
    <%= notice %>
  </div>
<% end %>

<%= render "form" %>

<div id="posts" class="max-w-2xl mx-auto w-full border-x border-gray-100 min-h-screen bg-white">
  <div class="flex flex-col">
    <% @posts.each do |post| %>
      <div class="p-4 border-b border-gray-100 flex gap-3 hover:bg-gray-50/50 transition duration-200">
        
        <div class="flex-shrink-0">
          <div class="h-12 w-12 rounded-full overflow-hidden bg-green-100 flex items-center justify-center border border-gray-100 shadow-sm">
            <% if post.user.avatar.attached? %>
              <%= image_tag post.user.avatar, class: "h-full w-full object-cover" %>
            <% else %>
              <span class="text-green-600 font-bold text-lg">
                <%= (post.user.name.presence || post.user.unique_name)[0].upcase %>
              </span>
            <% end %>
          </div>
        </div>

        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-1 mb-0.5 overflow-hidden">
            <span class="font-bold text-gray-900 truncate hover:underline cursor-pointer">
              <%= post.user.name.presence || "ユーザー名未設定" %>
            </span>
            <span class="text-gray-500 text-sm truncate">
              @<%= post.user.unique_name %>
            </span>
            <span class="text-gray-400 text-sm flex-shrink-0">
              · <%= l post.created_at, format: :short %>
            </span>
          </div>

          <h2 class="text-lg font-extrabold text-gray-900 mb-1 leading-tight hover:text-sky-600 transition">
            <%= link_to post.title, post %>
          </h2>

          <p class="text-[15px] text-gray-800 leading-normal mb-3 whitespace-pre-wrap break-words">
            <%= post.body %>
          </p>

          <%= link_to "/search/show/#{post.library&.api_str}", class: "block group" do %>
            <div class="border border-gray-200 rounded-2xl overflow-hidden flex h-32 sm:h-36 bg-white group-hover:border-sky-200 group-hover:bg-sky-50/30 transition duration-200 shadow-sm"
                data-controller="book-loader" 
                data-book-loader-api-key-value="<%= post.library.api_str %>">
              
              <div data-book-loader-target="thumbnail" 
                  class="w-24 sm:w-28 flex-shrink-0 bg-gray-50 border-r border-gray-100 overflow-hidden flex items-center justify-center">
                <div class="animate-pulse flex space-x-4">
                  <div class="bg-gray-200 h-20 w-14 rounded"></div>
                </div>
              </div>

              <div class="p-3 flex flex-col justify-center flex-1 min-w-0">
                <div data-book-loader-target="title" class="text-sky-600 text-[13px] font-bold truncate">読み込み中...</div>
                <div data-book-loader-target="authors" class="text-gray-900 text-sm font-bold truncate mt-1"></div>
                <div data-book-loader-target="description" class="text-gray-500 text-xs line-clamp-2 mt-1 leading-tight"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>