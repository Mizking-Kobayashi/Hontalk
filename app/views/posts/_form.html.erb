<div data-controller="new-post">
  <button type="button" 
          data-action="click->new-post#toggle" 
          class="fixed bottom-8 right-8 z-40 bg-sky-500 hover:bg-sky-600 text-white font-bold h-16 w-16 sm:w-auto sm:px-8 rounded-full shadow-2xl transition-all hover:scale-110 active:scale-95 flex items-center justify-center gap-2 group">
    
    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 transition-transform group-hover:rotate-90" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
    </svg>
    
    <span class="hidden sm:inline text-lg">投稿を作成</span>
  </button>

  <div data-new-post-target="npost" 
       class="hidden fixed inset-0 z-50 flex items-center justify-center p-4 sm:p-6"
       aria-modal="true">
    
    <div class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm transition-opacity" 
         data-action="click->new-post#toggle"></div>

    <div class="relative bg-white w-full max-w-lg rounded-3xl shadow-2xl overflow-hidden transform transition-all">
      <div class="flex items-center justify-between px-6 py-4 border-b border-gray-100 bg-gray-50/50">
        <h3 class="text-lg font-bold text-gray-900">新しい投稿</h3>
        <button type="button" data-action="click->new-post#toggle" class="text-gray-400 hover:text-gray-600 p-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <%= form_with(model: @post, class: "p-6") do |form| %>
        <% if @post.errors.any? %>
          <div class="bg-red-50 text-red-700 p-4 mb-4 rounded-xl text-sm">
            <ul class="list-disc ml-5">
              <% @post.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-5">
          <div>
            <%= form.text_field :title, 
                placeholder: "タイトルを入力してください", 
                class: "block w-full border-none p-0 text-xl font-bold focus:ring-0 placeholder-gray-400" %>
          </div>

          <div>
            <%= form.text_area :body, 
                placeholder: "今の気分や、本についての感想は？", 
                rows: 6,
                class: "block w-full border-none p-0 text-gray-700 text-lg resize-none focus:ring-0 placeholder-gray-400" %>
          </div>

          <div class="pt-4 border-t border-gray-100">
            <div class="flex flex-col gap-4">
              <div class="flex items-center justify-between bg-gray-50 p-3 rounded-2xl">
                <span class="text-xs font-bold text-gray-500 uppercase tracking-wider ml-2">紐付ける本</span>
                <%= form.collection_select :library_id, current_user.libraries, :id, :title, {}, 
                    class: "text-sm border-gray-200 rounded-xl bg-white px-3 py-1.5 focus:border-sky-500 focus:ring-sky-500" %>
              </div>

              <%= form.submit "投稿を公開する", 
                  class: "w-full bg-sky-500 hover:bg-sky-600 text-white font-bold py-4 rounded-2xl cursor-pointer transition shadow-lg shadow-sky-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>